#!/bin/sh

main() {
  # Send the edit command to the client.
  if test -n "$IN_KAKOUNE_CONNECT"; then
    edit "$@"
  # Terminal.
  elif test -t 0 -a -t 1; then
    kak "$@"
  # GUI apps.
  else
    launch "$@"
  fi
}

launch() {
  file=$1 line=$2 column=$3
  kak -ui dummy -e "
    new %{
      hook -always -once global ClientClose %val{client} kill!
      edit %{$file} $line $column
    }
  "
}

main "$@"
